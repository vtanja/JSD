
SbagModel:
    config=Config?
    simple_types*=BaseType
    entities+=Entity
;

Entity:
    'entity' name=ID ':'
    properties+=EntityProperty
;

EntityProperty:
    Property | Association
;

Property:
    name=ID ':' ptype=[BaseType] ';'
;

Association:
    OneToOne | OneToMany | ManyToOne | ManyToMany
;

OneToOne:
    name=ID ':' ptype=[Entity] '[1..1]' ';'
;

OneToMany:
    name=ID ':' ptype=[Entity] '[1..*' (owner=ID)? ']' ';'
;

ManyToOne:
    name=ID ':' ptype=[Entity] '[*..1]' ';'
;

ManyToMany:
    name=ID ':' ptype=[Entity] '[*..*' (owner=ID)? ']' ';'
;

BaseType:
    'type' name=ID
;

Config:
    ('project' ':' project=ID)?
    ('group' ':' group=STRING)?
    ('description' ':' description=STRING)?
;

Comment:
    /\/\/.*$/
;
