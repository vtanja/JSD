<br>
<div class="row">
    <div class="col">
        <h4 style="text-align:center;">{{entity.name|plural}}</h4>
    </div>
    <div class="col"  style="text-align:center;">
        <button type="button" class="btn btn-success" >Add new {{entity.name | lower }}</button>
    </div>
</div>
<br>
<table class="table" style="width:90%; margin:auto" *ngIf="{{entity.name|plural|lower}}?.length != 0">
    <tr>
    <th>#</th>
    {% for property in properties%}
        <th scope="col"> {{property.name|format_property|capitalize}} </th>
    {% endfor %}
    <th>&nbsp;</th>
    <th>&nbsp;</th>
    </tr>
    <tr *ngFor="let {{entity.name|lower}} of {{entity.name|plural|lower}}; let i = index">
        {% set index = '{{ i + 1 }}' %}
        <td> {{ index }} </td>
        {% for property in properties%}
        {% set prop = '{{ ' + (entity.name|lower)+'.'+(property.name|first_letter_lower) + ' }}' %}
        <td scope="row"> {{prop}} </td>
        {% endfor %}
        <td style="width: 20%;">
            <button type="button" class="btn btn-warning">Update {{entity.name | lower }}</button>
        </td>
        <td style="width: 20%;">
            <button type="button" class="btn btn-danger">Delete {{entity.name | lower }}</button>
        </td>
    </tr>
</table>
<div *ngIf="{{entity.name|plural|lower}}?.length == 0" class="alert alert-warning" role="alert" style="text-align:center;">
  There are no {{entity.name|plural|lower}} added!
</div>